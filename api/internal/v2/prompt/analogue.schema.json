{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "analogue.schema.json",
  "title": "AnalogueSchemas.v1.0a",
  "type": "object",
  "properties": {
    "analogies": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "text": { "type": "string", "maxLength": 320 },
          "outline": { "type": "string", "maxLength": 160 },
          "mapping": { "type": "object", "additionalProperties": { "type": "string", "maxLength": 80 } }
        },
        "required": ["text", "outline", "mapping"],
        "additionalProperties": false
      }
    },
    "safety": {
      "type": "object",
      "properties": {
        "refusal_reason": { "type": "string", "enum": ["oversolve_request"] }
      },
      "additionalProperties": false
    }
  },
  "required": ["analogies"],
  "additionalProperties": false
}