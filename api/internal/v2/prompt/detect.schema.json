{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DETECT.response.v1",
  "type": "object",
  "required": [
    "subject_hint",
    "confidence"
  ],
  "additionalProperties": false,
  "properties": {
    "subject_hint": {
      "type": "string",
      "enum": [
        "math",
        "russian",
        "generic"
      ]
    },
    "grade_hint": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "debug_reason": {
      "type": "string",
      "maxLength": 120
    }
  }
}