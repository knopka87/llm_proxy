{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PARSE.response.v1",
  "type": "object",
  "required": [
    "raw_task_text",
    "task_struct"
  ],
  "additionalProperties": false,
  "properties": {
    "raw_task_text": {
      "type": "string",
      "minLength": 1,
      "description": "OCR of the task text without student answers."
    },
    "task_struct": {
      "type": "object",
      "required": [
        "subject",
        "combined_subpoints"
      ],
      "additionalProperties": false,
      "properties": {
        "subject": {
          "type": "string",
          "enum": [
            "math",
            "russian",
            "generic"
          ]
        },
        "type": {
          "type": "string",
          "description": "Free text type label if detectable (e.g., 'arithmetic', 'grammar')."
        },
        "combined_subpoints": {
          "type": "boolean",
          "const": true,
          "description": "MVP rule: treat subpoints as one task."
        }
      }
    },
    "needs_user_confirmation": {
      "type": "boolean",
      "default": true
    }
  }
}