{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hint.schema.json",
  "title": "HintSchema.v1.1b",
  "type": "object",
  "properties": {
    "level": { "type": "string", "enum": ["L1", "L2", "L3"] },
    "hints": { "type": "array", "minItems": 1, "maxItems": 1, "items": { "type": "string" } },
    "debug": { "type": "object", "properties": { "reason": { "type": "string", "maxLength": 120 } }, "additionalProperties": false }
  },
  "required": ["level", "hints"],
  "additionalProperties": false
}