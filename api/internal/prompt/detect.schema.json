{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DETECT v5 output (minimal blocks)",
  "type": "object",
  "required": ["tasks"],
  "properties": {
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["original_number", "title_raw", "blocks"],
        "properties": {
          "original_number": { "type": "string", "description": "Оригинальный номер задания (verbatim)." },
          "title_raw": { "type": "string", "description": "Заголовок/подпункт задачи (verbatim)." },
          "multiple_tasks_detected": { "type": "boolean", "description": "true, если на изображении явно несколько разных задач." },
          "blocks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["block_raw"],
              "properties": {
                "block_raw": { "type": "string", "description": "Полный текст блока (verbatim)." }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}