{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "detect.schema.json",
  "title": "DETECT output schema (v1.1, rev5)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "final_state",
    "confidence",
    "multiple_tasks_detected",
    "found_solution",
    "has_diagrams_or_formulas",
    "has_faces",
    "pii_detected"
  ],
  "properties": {
    "final_state": {
      "type": "string",
      "enum": [
        "recognized_ready_to_parse",
        "needs_rescan",
        "not_a_task",
        "inappropriate_image"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "multiple_tasks_detected": {
      "type": "boolean"
    },
    "tasks_brief": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 120
      },
      "minItems": 2,
      "maxItems": 12
    },
    "disambiguation_needed": {
      "type": "boolean"
    },
    "disambiguation_question": {
      "type": "string",
      "minLength": 5,
      "maxLength": 140
    },
    "tasks_candidates": {
      "type": "array",
      "minItems": 2,
      "maxItems": 12,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "index",
          "title",
          "confidence"
        ],
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 0
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "top_candidate_index": {
      "type": "integer",
      "minimum": 0
    },
    "auto_choice_suggested": {
      "type": "boolean"
    },
    "found_solution": {
      "type": "boolean"
    },
    "solution_rough_quality": {
      "type": "string",
      "enum": [
        "ok",
        "uncertain",
        "bad"
      ]
    },
    "needs_rescan": {
      "type": "boolean"
    },
    "rescan_code": {
      "type": "string",
      "enum": [
        "blur",
        "glare",
        "crop",
        "too_far",
        "low_light",
        "none"
      ]
    },
    "rescan_reason": {
      "type": "string",
      "minLength": 5,
      "maxLength": 140
    },
    "has_diagrams_or_formulas": {
      "type": "boolean"
    },
    "graphics_kinds": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "table",
          "geometry",
          "diagram",
          "formula",
          "illustration"
        ]
      },
      "minItems": 1,
      "maxItems": 5,
      "uniqueItems": true
    },
    "has_faces": {
      "type": "boolean"
    },
    "pii_detected": {
      "type": "boolean"
    },
    "subject_guess": {
      "type": "string",
      "enum": [
        "math",
        "russian",
        "logic",
        "world",
        "other",
        "unknown"
      ]
    },
    "subject_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "allOf": [
    {
      "if": { "properties": { "multiple_tasks_detected": { "const": true } } },
      "then": { "required": [ "tasks_brief" ] },
      "else": { "not": { "anyOf": [
        { "required": [ "tasks_brief" ] },
        { "required": [ "disambiguation_needed" ] },
        { "required": [ "disambiguation_question" ] },
        { "required": [ "tasks_candidates" ] },
        { "required": [ "top_candidate_index" ] },
        { "required": [ "auto_choice_suggested" ] }
      ] } }
    },
    {
      "if": { "properties": { "disambiguation_needed": { "const": true } } },
      "then": {
        "required": [ "disambiguation_question", "tasks_candidates", "top_candidate_index" ],
        "properties": { "multiple_tasks_detected": { "const": true } }
      },
      "else": { "not": { "anyOf": [
        { "required": [ "disambiguation_question" ] },
        { "required": [ "tasks_candidates" ] },
        { "required": [ "top_candidate_index" ] },
        { "required": [ "auto_choice_suggested" ] }
      ] } }
    },
    {
      "if": { "properties": { "final_state": { "const": "needs_rescan" } } },
      "then": {
        "required": [ "needs_rescan", "rescan_reason" ],
        "properties": { "needs_rescan": { "const": true } }
      },
      "else": { "not": { "anyOf": [
        { "required": [ "needs_rescan" ] },
        { "required": [ "rescan_code" ] },
        { "required": [ "rescan_reason" ] }
      ] } }
    },
    {
      "if": { "properties": { "found_solution": { "const": true } } },
      "then": { "properties": { "final_state": { "const": "recognized_ready_to_parse" } } }
    },
    {
      "if": { "properties": { "has_diagrams_or_formulas": { "const": true } } },
      "then": { "required": [ "graphics_kinds" ] },
      "else": { "not": { "required": [ "graphics_kinds" ] } }
    },
    {
      "if": { "properties": { "final_state": { "const": "recognized_ready_to_parse" } } },
      "then": { "not": { "anyOf": [] } },
      "else": { "not": { "anyOf": [
        { "required": [ "subject_guess" ] },
        { "required": [ "subject_confidence" ] }
      ] } }
    },
    {
      "if": { "required": [ "subject_guess" ] },
      "then": { "required": [ "subject_confidence" ] }
    },
    {
      "if": { "required": [ "subject_confidence" ] },
      "then": { "required": [ "subject_guess" ] }
    }
  ]
}