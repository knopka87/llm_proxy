{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "normalize.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "success",
    "shape"
  ],
  "properties": {
    "success": {
      "type": "boolean"
    },
    "shape": {
      "type": "string",
      "enum": [
        "number",
        "string",
        "steps",
        "list"
      ]
    },
    "shape_detected": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "number",
        "string",
        "steps",
        "list",
        "unknown",
        null
      ]
    },
    "value": {
      "type": ["number", "string", "array", "null"],
      "description": "Нормализованное значение. Фактическая форма зависит от поля `shape`: для `number` — число; для `string` — строка; для `steps` — массив строк (до 6) или null; для `list` — массив произвольных элементов (без объектов).",
      "items": {
        "type": ["number", "string", "boolean", "null"]
      }
    },
    "units": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "detected": {
          "type": [
            "string",
            "null"
          ]
        },
        "canonical": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "mm",
            "cm",
            "m",
            "km",
            "mg",
            "g",
            "kg",
            "s",
            "min",
            "h",
            "rub",
            "uah",
            "usd",
            "eur",
            "celsius",
            "percent",
            null
          ]
        },
        "kept": {
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "uncertain_reasons": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "conflicting_corrections",
          "low_ocr_quality",
          "shape_mismatch",
          "too_many_candidates",
          "partial_crop",
          "blur",
          "unknown"
        ]
      }
    },
    "needs_clarification": {
      "type": [
        "boolean",
        "null"
      ]
    },
    "needs_user_action_message": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 120
    }
  }
}