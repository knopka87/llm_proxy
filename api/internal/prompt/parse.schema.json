{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "parse.schema.json",
  "title": "PARSE Output Schema v1.2 (MVP-aligned)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "final_state",
    "raw_text",
    "question",
    "entities",
    "confidence",
    "needs_rescan",
    "rescan_reason",
    "subject",
    "task_type",
    "solution_shape",
    "meaning_change_risk",
    "bracketed_spans_count",
    "confirmation_needed",
    "confirmation_reason",
    "grade",
    "grade_alignment",
    "original_number",
    "has_subparts",
    "subparts_labels",
    "solution_fragments_detected",
    "stripped_solution_spans",
    "has_diagrams_or_formulas",
    "routing_hint"
  ],
  "properties": {
    "final_state": {
      "type": "string",
      "enum": [
        "recognized_task",
        "needs_clarification"
      ]
    },
    "raw_text": {
      "description": "Строгая, дословная транскрибация условия выбранной задачи без решения.",
      "type": "string",
      "minLength": 1,
      "maxLength": 4000
    },
    "question": {
      "description": "Именно вопрос задачи, выделенный из условия без перефразирования.",
      "type": "string",
      "minLength": 1,
      "maxLength": 600
    },
    "entities": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "numbers": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "maxItems": 50
        },
        "units": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 30
          },
          "maxItems": 50
        },
        "names": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 40
          },
          "maxItems": 20
        }
      },
      "required": [
        "numbers",
        "units",
        "names"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "needs_rescan": {
      "type": "boolean"
    },
    "rescan_reason": {
      "type": "string",
      "maxLength": 140
    },
    "subject": {
      "type": "string",
      "enum": [
        "math",
        "russian",
        "world",
        "reading",
        "logic",
        "other"
      ]
    },
    "task_type": {
      "type": "string",
      "enum": [
        "арифметика",
        "текстовая_задача",
        "геометрия",
        "сравнение",
        "таблица",
        "орфография",
        "пунктуация",
        "разбор_слова",
        "лексика",
        "логика",
        "кроссворд",
        "ребус",
        "последовательность",
        "сопоставление",
        "чтение_понимание",
        "вопросы_по_тексту",
        "окружающий_мир",
        "другое"
      ]
    },
    "solution_shape": {
      "type": "string",
      "enum": [
        "number",
        "string",
        "steps",
        "list"
      ]
    },
    "meaning_change_risk": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "bracketed_spans_count": {
      "type": "integer",
      "minimum": 0,
      "maximum": 50
    },
    "confirmation_needed": {
      "type": "boolean"
    },
    "confirmation_reason": {
      "type": "string",
      "enum": [
        "low_confidence",
        "bracketed_spans_present",
        "meaning_change_risk_high",
        "has_diagrams_or_low_quality",
        "none"
      ]
    },
    "grade": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4
    },
    "grade_alignment": {
      "type": "string",
      "enum": [
        "aligned",
        "maybe_lower",
        "maybe_higher",
        "unknown"
      ]
    },
    "original_number": {
      "description": "Оригинальный номер/маркер задачи как на фото (например, '№ 312', '2.', 'б)'). Записывается дословно.",
      "type": "string",
      "minLength": 1,
      "maxLength": 40
    },
    "has_subparts": {
      "type": "boolean"
    },
    "subparts_labels": {
      "description": "Список меток подпунктов в порядке появления (например, ['a)', 'б)', '1)']).",
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 10
      },
      "maxItems": 20
    },
    "solution_fragments_detected": {
      "description": "Обнаружены ли во входном фрагменты решения (промежут. вычисления, ответы, схемы).",
      "type": "boolean"
    },
    "stripped_solution_spans": {
      "description": "Диапазоны [start, end] символов во входном raw_text, удалённые/помеченные как решение. Пустой массив, если не было.",
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer",
          "minimum": 0
        },
        "minItems": 2,
        "maxItems": 2
      },
      "maxItems": 50
    },
    "has_diagrams_or_formulas": {
      "type": "boolean"
    },
    "routing_hint": {
      "type": "string",
      "enum": [
        "request_new_photo_one_task",
        "proceed_hints",
        "confirm_transcription"
      ]
    },
    "attachments_used": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "maxItems": 5
    }
  }
}