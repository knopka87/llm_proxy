{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "parse.schema.json",
  "title": "PARSE Output Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "raw_text",
    "question",
    "confidence",
    "needs_rescan",
    "rescan_reason",
    "subject",
    "task_type",
    "solution_shape",
    "confirmation_needed",
    "confirmation_reason",
    "grade"
  ],
  "properties": {
    "raw_text": {
      "description": "Строгая, дословная транскрибация условия выбранной задачи без решения.",
      "type": "string",
      "minLength": 1,
      "maxLength": 4000
    },
    "question": {
      "description": "Именно вопрос задачи, выделенный из условия без перефразирования.",
      "type": "string",
      "minLength": 1,
      "maxLength": 600
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "needs_rescan": {
      "type": "boolean"
    },
    "rescan_reason": {
      "type": "string",
      "maxLength": 140
    },
    "subject": {
      "type": "string",
      "enum": [
        "math",
        "russian",
        "world",
        "reading",
        "logic",
        "other"
      ]
    },
    "task_type": {
      "type": "string",
      "enum": [
        "арифметика",
        "текстовая_задача",
        "геометрия",
        "сравнение",
        "таблица",
        "орфография",
        "пунктуация",
        "разбор_слова",
        "лексика",
        "логика",
        "кроссворд",
        "ребус",
        "последовательность",
        "сопоставление",
        "чтение_понимание",
        "вопросы_по_тексту",
        "окружающий_мир",
        "другое"
      ]
    },
    "solution_shape": {
      "type": "string",
      "enum": [
        "number",
        "string",
        "steps",
        "list"
      ]
    },
    "confirmation_needed": {
      "type": "boolean"
    },
    "confirmation_reason": {
      "type": "string",
      "enum": [
        "low_confidence",
        "bracketed_spans_present",
        "meaning_change_risk_high",
        "has_diagrams_or_low_quality",
        "none"
      ]
    },
    "grade": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4
    }
  }
}