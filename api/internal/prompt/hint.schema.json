{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hint.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "hint_title",
    "hint_steps",
    "control_question"
  ],
  "properties": {
    "hint_title": {
      "type": "string",
      "maxLength": 80
    },
    "hint_steps": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 260
      },
      "minItems": 1,
      "maxItems": 5
    },
    "control_question": {
      "type": "string",
      "maxLength": 200
    },
    "rule_hint": {
      "type": "string",
      "maxLength": 160
    }
  }
}