{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CHECK.response.v1",
  "type": "object",
  "required": [
    "is_correct",
    "feedback"
  ],
  "additionalProperties": false,
  "properties": {
    "is_correct": {
      "type": "boolean"
    },
    "feedback": {
      "type": "string",
      "description": "Point out where and what is wrong without giving the final answer."
    },
    "error_spans": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "integer"
          },
          "to": {
            "type": "integer"
          },
          "label": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}